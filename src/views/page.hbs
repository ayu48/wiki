<!DOCTYPE html>
    {{> head}}
    <body>
        {{> nav_bar}}
        <div class="container">
            <div class="page-header">
                <h1>{{{page.title}}}</h1>
            </div>
            <p class="text-muted">
                Created : {{time page.ctime}}
                &nbsp;&nbsp;&nbsp;&nbsp;
                Updated : {{time page.mtime}}
            </p>

            <p>{{page.content}}</p>

            <p class="bs-component">
                <button type="button" class="btn btn-default">Edit</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </p>

        </div>
    </body>
</html>
